@{
    ViewData["Title"] = "Регистрация";
}

<div class="container mt-5 d-flex justify-content-center">
    <div class="card shadow p-4" style="min-width: 350px; max-width: 400px; width: 100%;">
        <h2 class="text-center text-primary mb-4">Регистрация</h2>

        <form asp-action="Register" method="post" class="d-flex flex-column gap-3">
            <div>
                <label for="email" class="form-label">Имейл</label>
                <input type="email" name="email" id="email" class="form-control" placeholder="Въведи имейл" required />
            </div>

            <div>
                <label for="password" class="form-label">Парола</label>
                <input type="password" name="password" id="password" class="form-control" placeholder="Въведи парола" required />
            </div>

            <button type="submit" class="btn btn-success mt-3">Регистрирай се</button>
        </form>

        <div class="text-center mt-3">
            <a href="/Account/Login">Имаш профил? Влез тук</a>
        </div>
    </div>
</div>
