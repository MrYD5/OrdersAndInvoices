<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TestServer</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TestServer.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                @if(ViewData["Title"] != "Worker")
                {
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">TestServer</a>
                }
                else if (TempData["Role"] == "Admin")
                {
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">TestServer</a>
                }

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    @if(User.Identities != null && User.Identity.IsAuthenticated)
                    {
                        <ul class="navbar-nav">
                            @if (ViewData["Title"] == "Order")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Order" asp-action="Table">Table</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Order" asp-action="Upload">Upload</a>
                                </li>
                            }
                            else if (ViewData["Title"] == "Worker" && TempData["Role"] != "Admin")
                            {

                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Home</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Home" asp-action="Upload">Upload</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Home" asp-action="Workers">Workers</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Home" asp-action="Database">Database</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Home" asp-action="AddData">Add Data</a>
                                </li>
                            }
                        </ul>
                        <ul class="navbar-nav ms-auto">
                            <li class="nav-item">
                                <a asp-controller="Account" asp-action="Logout" class="btn btn-outline-danger me-2">Излез</a>
                            </li>
                        </ul>
                    }
                    else
                    {

                        <ul class="navbar-nav ms-auto">
                            <li class="nav-item">
                                <a asp-controller="Account" asp-action="Login" class="btn btn-outline-primary me-2">Вход</a>
                            </li>
@*                             <li class="nav-item">
                                <a asp-controller="Account" asp-action="Register" class="btn btn-outline-success">Регистрация</a>
                            </li> *@
                        </ul>
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - TestServer
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
