@{
    ViewData["Title"] = "Качи фактура";
    var path = @"C:\AppUploads\Invoices";
    var count = Directory.Exists(path) ? Directory.GetFiles(path).Length : 0;
}
@model List<string>

<style>
    .image-card {
        position: relative;
        border: 1px solid #ddd;
        padding: 10px;
        border-radius: 5px;
        background: #f9f9f9;
    }

    .delete-btn {
        position: absolute;
        top: 5px;
        right: 5px;
        display: none;
    }

    .image-card:hover .delete-btn {
        display: block;
    }
</style>

<div class="container mt-5">

    <h2 class="text-center text-primary mb-4">Качване на Фактура</h2>

    <div class="card shadow-sm p-4 mb-4">
        <form asp-action="UploadImage" asp-controller="Home" method="post" enctype="multipart/form-data" class="d-flex gap-2 flex-wrap align-items-center">
            <input type="file" name="imageFiles" class="form-control w-auto" multiple required>
            <button type="submit" class="btn btn-success">Качи фактура</button>
        </form>
        <p class="mt-3">Качени фактури: <strong>@count</strong></p>
    </div>

    <div class="d-flex gap-2 mb-4">
        <button id="toggleImagesBtn" class="btn btn-info">Покажи снимки</button>
        <a href="EditInvoice" class="btn btn-warning">Обработи фактурите</a>
    </div>

    <div id="imageContainer" style="display: none;">
        <h4 class="text-primary mt-3">Галерия</h4>
        <div class="row" id="galleryRow">
            @foreach (var file in Directory.Exists(path) ? Directory.GetFiles(path) : Array.Empty<string>())
            {
                var fileName = System.IO.Path.GetFileName(file);
                var imageSrc = Url.Action("GetInvoiceImage", "Home", new { fileName = fileName });
                <div class="col-md-3 mb-3 image-card">
                    <img src="@imageSrc" class="img-fluid rounded shadow-sm mb-2" alt="Фактура">
                    <form asp-action="DeleteImage" asp-controller="Home" method="post" class="d-inline">
                        <input type="hidden" name="fileName" value="@fileName" />
                        <button type="submit" class="btn btn-danger btn-sm delete-btn">Изтрий</button>
                    </form>
                </div>
            }
        </div>
    </div>

</div>


@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $("#toggleImagesBtn").click(function () {
            const $container = $("#imageContainer");
            const isVisible = $container.is(":visible");

            $container.slideToggle(300);
            $(this).text(isVisible ? "Покажи снимки" : "Скрий снимки");
        });
    </script>
}
